<link rel="stylesheet" href="/css/app.css">
<link rel="stylesheet" href="/css/all.min.css">
<link rel="stylesheet" href="/css/bootstrap.min.css">

<div class="holder d-flex align-items-center justify-content-center">
    
    <div class="container">
        <!-- FOR DEMO PURPOSE -->
        <header class="text-center mb-5">
            <h1 class="display-4">ToDo check list </h1><a href="/"><input type="button" value="View Task" class="btn btn-primary"></a>
        </header>

        
        <div class="row">
            <div class="col-lg-5 mx-auto">

                <!-- CHECKBOX LIST -->
                <div class="card rounded border-0 shadow-sm position-relative">
                    <div class="card-body p-5">
                        <div class="d-flex align-items-center mb-4 pb-4 border-bottom"><i class="far fa-calendar-alt fa-3x"></i>
                            <div class="ms-3">
                                <h4 class="text-uppercase fw-weight-bold mb-0"><%= dayName%></h4>
                                <p class="text-gray fst-italic mb-0"><%= newdate%></p>
                            </div>
                        </div>
                        <div class="form-check mb-3">
                        <form method="post">
                            <label class="form-check-label" for="flexCheck1"><span class="fst-italic pl-1">Add A New Task</span></label>
                            <input type="text" class="form-control" name="Task"><br><input type="submit" name="save" value="Add Task" class="btn btn-primary">
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/css/bootstrap.bundle.min.js"></script>